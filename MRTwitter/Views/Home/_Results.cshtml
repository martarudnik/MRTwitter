
@model MRTwitter.ViewModel.SearchResultsViewModel

@if (Model != null && Model?.Tweets != null && Model?.Tweets.Count > 0)
{
    <div class="results-container">
        <h3>Search results:</h3>
        <div class="twitter-feed">
            @foreach (var tweet in Model.Tweets)
            {
                <div class="tweet">
                    <p>@Html.Raw(tweet.TextShortVersion) </p>
                    <p class="tweet-datetime">Posted by @tweet.User.Name on @tweet.CreatedAtString</p>
                </div>
            }
        </div>
    </div>
}
else
{
    <div class="results-container">
        <h3>@GlobalResources.NoResults</h3>
    </div>
}

@if (Model != null && Model?.Errors != null && Model?.Errors.Count > 0)
{
    <div class="results-container">
        @foreach (var error in Model.Errors)
        {
            <h4 style="color:crimson">@error</h4>
        }
    </div>
}